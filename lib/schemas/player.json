{
    "$schema" : "http://json-schema.org/draft-04/schema#",
    "title": "Player",
    "description": "A player card within the game.",
    "type": "object",
    "properties": {
        "_id": {
            "description": "The unique identifier for the player",
            "type": "integer"
        },
        "firstName": {
            "description": "The players first name.",
            "type": "string"
        },
        "lastName": {
            "description": "The players last name.",
            "type": "string"
        },
        "position": {
            "description": "The players position",
            "type": "string", "enum": [ "Goalkeeper", "Defender", "Midfielder", "Attacker" ]
        },
        "shortpassing": {
            "description": "The passing ability of a player",
            "type": "integer"
        },
        "interceptions": {
            "description": "The interception ability of a player",
            "type": "integer"
        }
    },
    "required": [
                    "_id",
                    "firstName",
                    "lastName",
                    "position",
                    "crossing",
                    "dribbling",
                    "finishing",
                    "gkdiving",
                    "gkhandling",
                    "gkpositioning",
                    "gkreflexes",
                    "heading",
                    "interceptions",
                    "longpassing",
                    "longshots",
                    "marking",
                    "positioning",
                    "slidingtackle",
                    "shortpassing",
                    "shotpower",
                    "standingtackle",
                    "strength",
                    "vision",
                    "volleys"
                ]
}