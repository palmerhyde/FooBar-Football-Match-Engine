{
    "$schema" : "http://json-schema.org/draft-04/schema#",
    "title": "Move",
    "description": "A match between two users.",
    "type": "object",
    "properties": {
        "_id": {
            "description": "The unique identifier for a match.",
            "type": "integer"
        },
        "turn": {
            "description": "The current turn of the match.",
            "type": "integer"
        },
        "currentTurnUserId": {
            "description": "The id of the user whose turn it currently is.",
            "type": "integer"
        },
        "moves": {
            "description": "An array of moves that make up the match.",
            "type": "array",
            "items": {"$ref":"move.json"}
        },
        "player1": {
            "description": "A user object representing player 1.",
            "type": "integer"
        },
        "player2": {
            "description": "A user object representing player 2.",
            "type": "integer"
        }
    },
    "required": ["_id", "turn", "currentTurnUserId", "moves"]
}